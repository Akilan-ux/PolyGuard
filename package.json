{
  "name": "polyguard-demo-chain",
  "version": "1.0.0",
  "description": "Local Hardhat private chain and contract for PolyGuard demo",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node server.js",
    "node": "npx hardhat node",
    "deploy-local": "npx hardhat run --network localhost scripts/register.js",
    "deploy-local-with-hash": "node ./scripts/register_call.js",
    "start-api": "node server.js"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "hardhat": "^2.17.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "ethers": "^6.0.0"
  }
}
